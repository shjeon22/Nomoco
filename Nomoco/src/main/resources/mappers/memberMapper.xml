<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.nmc.mapper.MemberMapper">
  
  <insert id="insertMember">
  insert into member
  (id,pw,name,tel,email,address)
   values(#{id},#{pw},#{name},#{tel},#{email},#{address})
   </insert>
   
   <select id="login" resultType="com.nmc.domain.MemberVO">
   select*from member
   where
   id=#{id} and pw=#{pw}
   </select>
   
   <select id="getMember" resultType="com.nmc.domain.MemberVO">
   select*from member
   where
   id =#{id}
   </select>
   
   <update id="update">
   update member
   set name=#{name},tel=#{tel},email=#{email},address=#{address},updatedate=now()
   where id=#{id} and pw=#{pw}
   </update>
   
   <delete id="delete">
   delete from member where id=#{id} and pw=#{pw}
   </delete>
   
  
  </mapper>